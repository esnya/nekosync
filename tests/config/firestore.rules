service cloud.firestore {
  match /databases/{database}/documents {
    match /nekord-test-a/{id} {
      allow read, write;
    }
    match /nekord-test-b/{id} {
      allow read, write;
      match /nekord-test-a/{id} {
        allow read, write;
      }
    }
    match /nekord-test-c/{id} {
      allow read;
      allow write: if get(/databases/$(database)/documents/nekord-test-d/$(id)).data.writable == true;
    }
    match /nekord-test-d/{id} {
      allow read, write;
    }
  }
}